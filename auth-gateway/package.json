{
  "name": "@smis/auth-gateway",
  "version": "0.1.0",
  "private": true,
  "description": "NestJS gateway for SMIS SSO flows and role/permission APIs",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc -p tsconfig.json && rm -rf dist/templates dist/public && mkdir -p dist/templates dist/public && cp -r src/templates/. dist/templates && cp -r src/public/. dist/public",
    "start": "node dist/main.js",
    "start:dev": "ts-node src/main.ts",
    "lint": "tsc -p tsconfig.json --noEmit"
  },
  "dependencies": {
    "@fastify/cookie": "^8.3.0",
    "@fastify/static": "^7.0.4",
    "@fastify/view": "^8.2.0",
    "@nestjs/common": "^10.3.0",
    "@nestjs/core": "^10.3.0",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/platform-fastify": "^10.3.0",
    "@nestjs/serve-static": "^4.0.2",
    "@nestjs/typeorm": "^10.0.0",
    "bcryptjs": "^2.4.3",
    "fastify": "^4.25.0",
    "handlebars": "^4.7.8",
    "pg": "^8.11.5",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.20"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^20.11.30",
    "@types/pg": "^8.11.10",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
